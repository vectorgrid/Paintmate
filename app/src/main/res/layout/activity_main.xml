<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sociodev.adarshadas.paintmate.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:layout_margin="2dp">
        <LinearLayout
            android:id="@+id/toolAndColorContainer"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_note_add_white_24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:id="@+id/new_drawing_btn" />
                <ImageButton
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_brush_white_24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:id="@+id/brush_btn" />
                <ImageButton
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_eraser_variant_white_24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:id="@+id/eraser_btn" />
                <ImageButton
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_save_white_24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:id="@+id/save_btn" />
                <ImageButton
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_share_white_24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:id="@+id/share_btn" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:orientation="vertical">
                <GridLayout
                    android:id="@+id/paint_colors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"
                    android:rowCount="6"
                    android:columnCount="2"
                    android:layout_gravity="center"
                    android:background="@drawable/paint">
                    <ImageButton
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center|top"
                        android:background="@color/red_A700"
                        android:onClick="paintClicked"
                        android:tag="#D50000"/>
                    <ImageButton
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center|top"
                        android:background="@color/purple_A700"
                        android:onClick="paintClicked"
                        android:tag="#AA00FF"/>
                    <ImageButton
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center|top"
                        android:background="@color/orange_A700"
                        android:onClick="paintClicked"
                        android:tag="#FF6D00"/>
                    <ImageButton
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center|top"
                        android:background="@color/blue_A700"
                        android:onClick="paintClicked"
                        android:tag="#2962FF"/>
                    <ImageButton
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center|top"
                        android:background="@color/yellow_A700"
                        android:onClick="paintClicked"
                        android:tag="#FFD600"/>
                    <ImageButton
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center|top"
                        android:background="@color/indigo_A700"
                        android:onClick="paintClicked"
                        android:tag="#304FFE"/>
                    <ImageButton
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center|top"
                        android:background="@color/green_A700"
                        android:onClick="paintClicked"
                        android:tag="#64DD17"/>
                    <ImageButton
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center|top"
                        android:background="@color/cyan_A100"
                        android:onClick="paintClicked"
                        android:tag="#84FFFF"/>
                    <ImageButton
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center|top"
                        android:background="@color/amber_A700"
                        android:onClick="paintClicked"
                        android:tag="#FFAB00"/>
                    <ImageButton
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center|top"
                        android:background="@color/teal_A700"
                        android:onClick="paintClicked"
                        android:tag="#00BFA5"/>
                    <ImageButton
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center|top"
                        android:background="@color/brown_600"
                        android:onClick="paintClicked"
                        android:tag="#6D4C41"/>
                    <ImageButton
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center|top"
                        android:background="@color/lime_A700"
                        android:onClick="paintClicked"
                        android:tag="#AEEA00"/>
                    <ImageButton
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center|top"
                        android:background="@color/pink_A700"
                        android:onClick="paintClicked"
                        android:tag="#C51162"/>
                    <ImageButton
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center|top"
                        android:background="@color/grey_700"
                        android:onClick="paintClicked"
                        android:tag="#616161"/>
                    <ImageButton
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center|top"
                        android:background="@color/black"
                        android:onClick="paintClicked"
                        android:tag="#000000"/>
                    <ImageButton
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center|top"
                        android:background="@color/grey_50"
                        android:onClick="paintClicked"
                        android:tag="#FFFFFF"/>
                    <ImageButton
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center|top"
                        android:background="@color/brown_400"
                        android:onClick="paintClicked"
                        android:tag="#8D6E63"/>
                    <ImageButton
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center|top"
                        android:background="@color/blue_400"
                        android:onClick="paintClicked"
                        android:tag="#42A5F5"/>
                </GridLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/canvas_border">

            <com.sociodev.adarshadas.paintmate.DrawingCanvas
                android:id="@+id/drawing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@color/black" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
